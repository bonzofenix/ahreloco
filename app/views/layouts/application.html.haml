!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Ahreloco"
      %meta{:content => content_for?(:description) ? yield(:description) : "Ahreloco", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}", :data => page_attributes }

    = analytics_init if Rails.env.production?

    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .content
          .row
            .span12
              = render 'layouts/messages'
              = yield
          %footer
          %footer.row
            .container-footer.span12
              .container-footer-inner
                %dl
                  %dt
                    Ahreloco.tv
                %dl
                  %dt
                    Ayuda
                  %dd
                    = link_to('Preguntas Frecuentes', '#')
                  %dd
                    = mail_to('bonzofenix@gmail.com','Contactanos')
                %dl
                  %dt
                    Comunidad
                  %dd
                    = link_to('Facebook', "http://www.facebook.com/ahrelocotv", rel: 'nofollow')
                  %dd
                    = link_to('Twitter',"https://twitter.com/ahrelocotv", rel: 'nofollow')
                  %dd
                    = link_to('Youtube','http://youtube.com/user/ahrelocotv', rel: 'nofollow')
                .row-fluid
                  .span12
                    .pull-right
                      %h6
                        Copyright 2013 Ahreloco.tv. Todos los derechos reservados.
                        %br
                        Desarrollado por
                        =link_to('Bonzofenix.', 'http://bonzofenix.github.io/', class: 'red')
      / ! end of .container
    / ! end of #main
