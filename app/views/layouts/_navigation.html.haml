= link_to home_index_path, class: 'brand' do
  %i.icon-home.icon-white
  =image_tag 'logo.png'
%ul.nav
  %li.dropdown.programs
    %a.dropdown-toggle.programs-btn(href="#")
      Programas
      %b.caret
    %ul.dropdown-menu
      - Program.all.each do |p|
        %li.program
          %a
            = image_tag p.avatar_url
            =  p.name
            %b.caret
        .channels.hide
          -p.users.each do |u|
            %li.channel= link_to u.username, user_path(u)
  %li.dropdown.programs
    = link_to 'Videos de la comunidad', videos_path

%ul.nav.pull-right
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle(href="#" data-toggle="dropdown")
        %i.icon-film.icon-white
        Concurso semanal!
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to new_video_path do
            %i.icon-upload
            Subi tu video

    %li.divider-vertical
    %li
      = link_to current_user, class: 'image' do
        = image_tag current_user.avatar_url, width: 30, height: 25
        = current_user.username
    %li.divider-vertical
    %li.dropdown
      %a.dropdown-toggle(href="#" data-toggle="dropdown")
        %i.icon-cog.icon-white
      %ul.dropdown-menu
        %li
        /  = link_to current_user do
        /    %i.icon-user
        /    Editar mi perfil
        %li
          = link_to signout_path do
            %i.icon-off
            Cerrar sesion

  -  else
    %li
      = link_to "Loggeate con tu cuenta de youtube", '/auth/youtube'
