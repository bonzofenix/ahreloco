
= link_to "Ahreloco", root_path, class: 'brand'
%ul.nav
  %li.dropdown.programs
    %a.dropdown-toggle.programs-btn(href="#")
      Programas
      %b.caret
    %ul.dropdown-menu
      - Program.all.each do |p|
        %li.program
          %a
            = image_tag p.avatar_url
            =  p.name
            %b.caret
        .channels.hide
          -p.users.each do |u|
            %li.channel= link_to u.username, user_path(u)
  %li.dropdown.programs
    = link_to 'Videos de la comunidad', videos_path

%ul.nav.pull-right
  %li
    = link_to 'Concursa con tu video', new_video_path
    - if user_signed_in?
      %li.divider-vertical
      %li
        = link_to current_user, class: 'image' do
          = image_tag current_user.avatar_url, width: 30, height: 25
          = current_user.username
      %li.divider-vertical
      %li.dropdown
        %a.dropdown-toggle(href="#" data-toggle="dropdown")
          %i.icon-cog.icon-white
        %ul.dropdown-menu
          %li= link_to "editar mi perfil", current_user
          %li= link_to "cerrar sesion", signout_path
    -  else
      %li
        = link_to "Loggeate con tu cuenta de youtube", '/auth/youtube'
