
= form_for Comment.new, remote: true, class: 'form' do |f|
  .controlscomments_path
    = f.hidden_field :video_id,value: video_id
    = f.fields_for :user do |u|
      = u.hidden_field :username, value: current_user.username
    = f.text_area :content, placeholder: 'Comenta aca!', rows: 4, cols: 60,class: 'span8'
  .form-
    = f.submit 'Comentar' ,class: 'btn btn-success'
