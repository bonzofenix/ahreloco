%h2= @default_video.title
.row
  .span8
    %iframe.youtube-player{frameborder: "0", height: "385",
      src: "http://www.youtube.com/embed/#{@default_video.video_id}",
      type: "text/html", width: "640"}
    - if current_user
      = render 'comments/new',video_id: @default_video.video_id
    = render 'comments/list'
  .span4
    .row-fluid
      .span12.well
        .row-fluid
          .span4
            = image_tag @default_video.user.avatar_url
          .span8
            %h4= @default_video.user.username
            %h5
              subscriptores:
              = @default_video.user.subscribers_count
            %h5
              likes:
              = @default_video.user.likes
            %h5
              dislikes:
              = @default_video.user.dislikes
    .videos
      - if @videos
        -@videos.each do |video|
          .video
            %h4
              = link_to video.title,user_path(video_id: video.id)
            %p
              = image_tag(video.thumbnails.first[:url])

- page_data('video-id' => @default_video.video_id )

