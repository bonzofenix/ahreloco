%h2= @video.title
.row
  .span8
    %object{:height => "385", :width => "640"}
      %param{:name => "movie", :value => "http://www.youtube.com/v/#{@video.video_id}&autoplay=1"}/
      %embed{:height => "385", :src => "http://www.youtube.com/v/#{@video.video_id}&autoplay=1", :type => "application/x-shockwave-flash", :width => "640"}
    - if current_user
      = render 'comments/new',video_id: @video.video_id
    = render 'comments/list'
  .span4
    .row-fluid
      .span12.well
        .row-fluid
          .span4
            = image_tag @video.user.avatar_url
          .span8
            %h4= @video.user.username
            %h5
              subscriptores:
              = @video.user.subscribers_count
            %h5
              likes:
              = @video.user.likes
            %h5
              dislikes:
              = @video.user.dislikes
    .videos
      - if @videos
        -@videos.each do |video|
          .video.row-fluid
            .span4
              = image_tag(video.small_thumb)
            .span8
              %p
                = link_to video.title, user_path(video_id: video.id)
              %p.muted
                visto
                = video.view_count

- page_data('video-id' => @video.video_id )

