.row
  .span8
    .flexslider
      %ul.slides
        -@latest_program_videos.each do |v|
          %li{"data-thumb" => v.small_thumb}
            =link_to user_path(v.user,video_id: v.id) do
              = image_tag(v.big_thumb)
              .well.slide-user-info
                %h4
                  =link_to v.title, user_path(v.user,video_id: v.id)
                  %em.muted
                    de
                    = link_to v.user.username, user_path(v.user)
    .week-conquest
      %h4
        Videos del concurso de la semana
      =render 'videos/list', videos: @week_conquest
  .span4
    .most-views
      %h4
        Videos mas vistos en ahreloco
      %ul.nav.nav-pills
        %li.active
          %a{"data-toggle" => "pill", :href => "#mv-day"}
            Hoy
        %li
          %a{"data-toggle" => "pill", :href => "#mv-week"}
            Esta Semana
        %li
          %a{"data-toggle" => "pill", :href => "#mv-month"}
            Este Mes
      .tab-content
        #mv-day.tab-pane.active
          = render 'videos/home_list', videos: @top_today
        #mv-week.tab-pane
          = render 'videos/home_list', videos: @top_week
        #mv-month.tab-pane
          = render 'videos/home_list', videos: @top_month




